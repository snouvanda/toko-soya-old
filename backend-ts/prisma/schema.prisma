model Shippers {
  id           String    @unique @db.VarChar(10) // example: SHP001
  userId       String?   @db.VarChar(50)
  alias        String    @db.VarChar(25)
  companyName  String    @db.VarChar(50)
  contactName  String?   @db.VarChar(50)
  contactPhone String?   @db.VarChar(50)
